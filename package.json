{
	"name": "paperless-desktop",
	"version": "0.0.15",
	"description": "Desktop app that uses the paperless API to manage your documents",
	"scripts": {
		"start": "gulp && electron app app --js-flags='--expose-gc'",
		"test": "mocha test",
		"tdd": "mocha --watch test",
		"lint": "eslint js/src",
		"precommit": "pretty-quick --staged",
		"package": "gulp && electron-packager ./ Paperless --platform=darwin --arch=all --out ./build --ignore='^/build$' --electron-version 1.8.4 --overwrite --icon=./icon.icns",
		"dev": "NODE_ENV='development' electron app --js-flags='--expose-gc' --enable-logging --remote-debugging-port=9222",
		"postinstall": "electron-builder install-app-deps",
		"pack-all": "build --dir -mwl --x64 --ia32",
		"dist-all": "build -mwl --x64 --ia32",
		"pack": "build --dir",
		"dist": "build --x64 --ia32"
	},
	"build": {
		"productName": "Paperless",
		"appId": "com.electron.paperless",
		"artifactName": "${name}-${arch}.${ext}",
		"copyright": "© 2019 Thomas Brüggemann",
		"mac": {
			"category": "public.app-category.productivity"
		},
		"dmg": {
			"title": "Paperless",
			"icon": "build/icon.icns",
			"iconSize": 128,
			"contents": [
				{
					"x": 355,
					"y": 125,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 155,
					"y": 125,
					"type": "file"
				}
			]
		},
		"win": {
			"icon": "build/icon.ico",
			"target": [
				"nsis",
				"nsis-web",
				"7z",
				"zip"
			]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"nsisWeb": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"linux": {
			"icon": "build/icons/512x512.png",
			"category": "Office",
			"packageCategory": "Office",
			"target": [
				"AppImage",
				"deb"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thomasbrueggemann/paperless-desktop.git"
	},
	"dependencies": {
		"alt": "^0.17.4",
		"async": "^1.4.2",
		"axios": "^0.15.3",
		"babel": "^5.8.23",
		"btoa": "^1.1.2",
		"electron-dl": "^1.6.0",
		"history": "^1.12.5",
		"jquery": "^3.1.1",
		"moment": "^2.17.1",
		"other-window-ipc": "^1.3.0",
		"prop-types": "^15.5.8",
		"react": "^15.4.1",
		"react-big-calendar": "^0.13.0",
		"react-dom": "^15.4.1",
		"react-file-drop": "^0.1.8",
		"react-pure-render": "^1.0.2",
		"react-router": "^3.0.2",
		"react-select": "^1.0.0-rc.3",
		"react-select2-wrapper": "^1.0.4-beta2",
		"react-waypoint": "^6.0.0",
		"riek": "^1.0.7",
		"simple-react-pdf2": "^2.0.1",
		"slug": "^0.9.1",
		"underscore": "^1.8.3",
		"webpack": "^2.4.1",
		"i18next": "^10.3.0",
		"i18next-node-fs-backend": "^1.0.0"
	},
	"devDependencies": {
		"babelify": "^6.3.0",
		"bower": "^1.6.3",
		"browserify": "^11.2.0",
		"eslint": "^5.1.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-react": "^7.10.0",
		"gulp": "^3.9.0",
		"gulp-util": "^3.0.6",
		"husky": "^0.14.3",
		"prettier": "^1.13.7",
		"pretty-quick": "^1.6.0",
		"vinyl-source-stream": "^1.1.0",
		"chai": "^4.1.2",
		"chai-as-promised": "^7.1.1",
		"electron": "^2.0.8",
		"electron-builder": "^19.55.1",
		"mocha": "^4.0.1",
		"sinon": "^4.2.0",
		"spectron": "^3.8.0"
	},
	"keywords": [
		"paperless",
		"desktop",
		"electron"
	],
	"author": "Thomas Brüggemann <mail@thomasbrueggemann.com>",
	"contributors": [
		"Lawrence Meckan <media@absalom.biz>"
	],
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/thomasbrueggemann/paperless-desktop/issues"
	},
	"homepage": "https://github.com/thomasbrueggemann/paperless-desktop#readme",
	"prettier": {
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 4,
		"arrowParens": "always"
	}
}
